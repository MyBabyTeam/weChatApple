/**index.wxss**/ 
.index_notice {
  padding:10px;
  margin: 5px;
  font-size: 12px;
  color: orange;
  background-color: rgba(255, 255, 0, 0.541);
  border-radius: 5px;
}
.index_icon{
  margin: 20px 0;
  display: flex;
  width: 100%;
  justify-content: space-around
}
.icon_item{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 14px
}
.icon_item image{
  width: 25px;
  height: 25px;
  margin-bottom: 10px;
  padding: 10px;
  background-color: rosybrown;
  border-radius: 50%;
}
.index_input{
  width: 92%;
  display: flex;
  padding: 6px;
  background-color: rgba(134, 131, 131, 0.212);
  justify-content: space-around;
  align-items: center;
   font-size: 14px;
}
.input_block{
  display: flex;
  background-color: white;
  font-size: 14px;
  padding: 3px;

}
.input_block icon{
  margin-right: 3px;
}
.index_block{
  margin: 20px 0;
  width: 95%;
  display: flex;
}
.block_left{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right:3px solid rgba(134, 131, 131, 0.212);
  padding-right: 12px
}
.block_left image{
  width: 100px;
  height: 100px;
  margin-bottom: 10px
}
.block_right{
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-around
}
.block_little{
  display: flex;
  justify-content: space-around;
}
.block_little:first-child{
   border-bottom: 3px solid rgba(134, 131, 131, 0.212);
   padding-bottom: 10px;
}
.block_text{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.block_little image{
  width: 50px;
  height: 50px;
}
.text_small{
  font-size: 12px;
  color:green
}
.index_list{
  width: 95%;
}
.index_business{
  font-weight: bold;
}
.index_kind{
  display: flex;
  justify-content: space-around;
  margin-top:10px;
  font-size: 14px;
}
.index_kind text{
  padding: 8px;
  border-radius: 5px;
  background-color:rgba(134, 131, 131, 0.212)
}
.business{
  display: flex;
  border: 2px solid rgba(134, 131, 131, 0.212);
  margin: 10px 0;
  padding: 10px 0;
  border-radius: 5px
}
.business_img{
  flex: 1.3;
}
.business_img image{
  width: 100%;
  height: 100%;
}
.business_info{
  flex: 2;
}
.business_rate{
  display: flex;
  font-size: 12px;
  margin-top: 3px
}
.business_money{
  display: flex;
  font-size: 12px;
  margin: 3px 0
}
.money{
  margin-right: 10px;
}
.rate{
  display: flex;
  align-items: baseline;
  margin-right: 10px
}
.rate image{
  width: 12px;
  height: 12px;
}
.business_discount{
  display: flex;
  font-size: 12px;
  justify-content: space-around;
}
.business_discount text{
  border:1px solid rgba(255, 0, 0, 0.418);
  border-radius: 5px;
  padding: 2px;
}