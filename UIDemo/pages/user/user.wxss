/**index.wxss**/
.container{
  display: flex;
  flex-direction: column;
}
.userTop{
  width: 90%;
  display: flex;
  align-items: center;
  margin: 0 auto
}
.userAvatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user_name{
  margin-left: 20rpx;
}
.vip_banner{
  width: 90%;
  display: flex;
  flex-direction: column;
  padding: 25rpx;
  margin: 40rpx auto;
  background-color: rgba(228, 187, 52, 0.719);
  border-radius:10px;
}
.vip_content{
  font-size: 12px;
  margin-top: 10rpx;
  color: rgba(0, 0, 0, 0.5);
}
.list{
  width: 90%;
  margin: 0 auto;
}
.list_item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 13px 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.list_item image{
  width: 16px;
  height: 16px;
}
